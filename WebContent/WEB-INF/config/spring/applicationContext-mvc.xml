			<aop:before pointcut-ref="interfaceDataService" method="doBefore" />
			<aop:after pointcut-ref="interfaceDataService" method="doAfter" />
			<aop:around pointcut-ref="interfaceDataService" method="doAround" />
			<aop:after-throwing pointcut-ref="interfaceDataService" method="doThrowing" throwing="ex" />
		</aop:aspect>
	</aop:config>
	<bean id="sendError" class="org.sms.project.monitor.SysMonitor"></bean>
	<aop:aspectj-autoproxy /> -->

	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basename" value="messages" />
		<property name="useCodeAsDefaultMessage" value="true" />
	</bean>
</beans>